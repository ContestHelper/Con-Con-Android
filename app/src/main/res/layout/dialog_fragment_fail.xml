<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:context=".view.dialog.FailDialogFragment">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/layout_290dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/radius_10dp"
            app:cardElevation="@dimen/elevation_5dp"
            app:cardUseCompatPadding="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_margin="@dimen/space_20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/vec_ic_error" />

                    <TextView
                        android:id="@+id/tv_title"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="@dimen/space_20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space_10dp"
                        android:textSize="@dimen/text_size_15sp"
                        android:text="다시 시도해 주세요."/>

                    <TextView
                        android:id="@+id/tv_content_dialog_fail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/space_20dp"
                        android:layout_marginBottom="@dimen/space_20dp"
                        android:gravity="center"
                        tools:text="실패하 ㄴ워닌" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button11"
                        android:background="@color/error_color"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="확인" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>