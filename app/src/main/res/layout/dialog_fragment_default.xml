<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.dialog.DefaultDialogFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_transparent"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/layout_290dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/radius_10dp"
            app:cardElevation="@dimen/elevation_5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_margin="@dimen/image_20dp"
                    android:layout_width="@dimen/image_50dp"
                    android:layout_height="@dimen/layout_50dp"
                    app:srcCompat="@drawable/ic_logo" />

                <TextView
                    android:id="@+id/tv_title"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="@dimen/space_20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_10dp"
                    android:textSize="@dimen/text_size_15sp"
                    android:text="조금만 기다려주세요!"/>

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/space_20dp"
                    android:layout_marginBottom="@dimen/space_20dp"
                    android:gravity="center"
                    tools:text="000은 추후 업데이트 예정입니다." />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_confirm"
                    android:background="@drawable/selector_color_white_to_grey"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/confirm" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>