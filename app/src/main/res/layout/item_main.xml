<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/item_main_background">

    <TextView
        android:id="@+id/item_contest_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="대소고 코딩테스트"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/item_Deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_contest_title"
        app:layout_constraintStart_toStartOf="@id/item_contest_title"
        android:text="마감 200일 전"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/item_profile"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="@id/item_Deadline"
        app:layout_constraintTop_toBottomOf="@id/item_Deadline"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="18dp" />

    <TextView
        android:id="@+id/item_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/item_profile"
        app:layout_constraintBottom_toBottomOf="@id/item_profile"
        app:layout_constraintStart_toEndOf="@id/item_profile"
        android:layout_marginStart="15dp"
        android:text="가나다123"
        android:textColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>