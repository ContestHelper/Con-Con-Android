<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:background="@drawable/background_gradient_outline_prize">

        <TextView
            android:id="@+id/tv_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_15sp"
            tools:text="1등"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/space_15dp"
            android:layout_marginVertical="@dimen/space_15dp"/>

        <ImageView
            android:id="@+id/dat"
            android:layout_width="@dimen/image_5dp"
            android:layout_height="@dimen/image_5dp"
            android:layout_marginStart="@dimen/space_10dp"
            app:layout_constraintStart_toEndOf="@id/tv_rank"
            app:layout_constraintTop_toTopOf="@id/tv_rank"
            app:layout_constraintBottom_toBottomOf="@id/tv_rank"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="100000원"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/space_18dp"
            app:layout_constraintStart_toEndOf="@id/dat"
            app:layout_constraintTop_toTopOf="@id/dat"
            app:layout_constraintBottom_toBottomOf="@id/dat"/>

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/vec_ic_close" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
