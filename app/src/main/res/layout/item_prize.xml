<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_gradient_outline_prize">

    <TextView
        android:id="@+id/rankTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_15sp"
        tools:text="1등"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/space_15dp"
        android:layout_marginVertical="@dimen/space_15dp"/>

    <ImageView
        android:id="@+id/dat"
        android:layout_width="@dimen/image_5dp"
        android:layout_height="@dimen/image_5dp"
        android:layout_marginStart="@dimen/space_10dp"
        app:layout_constraintStart_toEndOf="@id/rankTextView"
        app:layout_constraintTop_toTopOf="@id/rankTextView"
        app:layout_constraintBottom_toBottomOf="@id/rankTextView"/>

    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="100000원"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/space_18dp"
        app:layout_constraintStart_toEndOf="@id/dat"
        app:layout_constraintTop_toTopOf="@id/dat"
        app:layout_constraintBottom_toBottomOf="@id/dat"/>



</androidx.constraintlayout.widget.ConstraintLayout>