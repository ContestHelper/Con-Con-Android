<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/radius_50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/item_profile_select"
            android:layout_width="@dimen/image_45dp"
            android:layout_height="@dimen/image_45dp"
            android:src="@drawable/vec_ic_profile" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_nickName_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="닉네임"
        android:layout_marginStart="@dimen/space_15dp"
        app:layout_constraintTop_toTopOf="@id/cardView4"
        app:layout_constraintBottom_toBottomOf="@id/cardView4"
        app:layout_constraintStart_toEndOf="@id/cardView4"/>

</androidx.constraintlayout.widget.ConstraintLayout>