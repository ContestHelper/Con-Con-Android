<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.2021IctProject" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_gradient_end_color</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- No Action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- TextInputLayout -->
    <style name="BaseTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="errorEnabled">true</item>
        <item name="helperTextEnabled">true</item>
        <item name="hintEnabled">false</item>
        <!-- stroke -->
        <item name="boxStrokeColor">@color/main_color</item>
        <item name="boxStrokeWidth">0.7dp</item>
        <item name="boxStrokeWidthFocused">0.7dp</item>
        <!-- radius -->
        <item name="boxCornerRadiusTopStart">30dp</item>
        <item name="boxCornerRadiusTopEnd">30dp</item>
        <item name="boxCornerRadiusBottomStart">30dp</item>
        <item name="boxCornerRadiusBottomEnd">30dp</item>
    </style>

    <!-- EditText -->
    <style name="Widget.AppCompat.EditText.BaseEditText">
        <item name="hintEnabled">false</item>
        <!-- line -->
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <!-- font padding -->
        <item name="android:includeFontPadding">true</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <!-- font -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Widget.AppCompat.EditText.ContentEditText">
        <item name="hintEnabled">false</item>
        <!-- line -->
        <item name="android:state_multiline">true</item>
        <!-- font padding -->
        <item name="android:includeFontPadding">true</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <!-- font -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- TextView -->
    <style name="Base.Widget.AppCompat.TextView.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Base.Widget.AppCompat.TextView.Bold">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Base.Widget.AppCompat.TextView.Big">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Base.Widget.AppCompat.TextView.RegularBold">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Base.Widget.AppCompat.TextView.Regular">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Base.Widget.AppCompat.TextView.Shadow">
        <item name="android:shadowDy">9.0</item>
        <item name="android:shadowRadius">8.0</item>
        <item name="android:shadowColor">#5E000000</item>
    </style>

    <style name="Base.Widget.AppCompat.TextView.Small">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!-- Button -->
    <style name="Widget.AppCompat.Button.Main">
        <item name="android:background">@drawable/selector_btn_main</item>
        <item name="android:translationZ">10dp</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="Widget.MaterialComponents.FloatingActionButton.Main">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:elevation">12dp</item>
        <item name="borderWidth">0dp</item>
    </style>

    <style name="Widget.AppCompat.Button.NumberPad">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--    -->
    <style name="ContestDetailLinear">
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/background_gradient_outline_thin</item>
    </style>

</resources>